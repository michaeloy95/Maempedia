<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<style name="MyTheme" parent="MyTheme.Base">
    <item name="android:colorPressedHighlight">@color/colorControlHighlight</item>
    <item name="android:colorLongPressedHighlight">@color/colorControlHighlight</item>
    <item name="android:colorFocusedHighlight">@color/colorControlHighlight</item>
    <item name="android:colorActivatedHighlight">@color/colorControlHighlight</item>
    <item name="android:activatedBackgroundIndicator">@color/colorControlHighlight</item>
    <item name="android:popupMenuStyle">@color/colorPrimary</item>
	</style>
	<!-- Base theme applied no matter what API -->
	<style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
		<item name="windowNoTitle">true</item>
		<!--We will be using the toolbar so no need to show ActionBar-->
		<item name="windowActionBar">false</item>
		<!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">#F8F8F8</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">#F8F8F8</item>
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<item name="colorAccent">#2D2D2D</item>
		<!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="colorControlNormal">#C8C8C8</item>
    <item name="colorControlActivated">#646464</item>
    <item name="colorControlHighlight">#E6E6E6</item>
		<item name="windowActionModeOverlay">true</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <item name="android:windowLightStatusBar">true</item>
		<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>
	<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">#CF000F</item>
	</style>
  <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">#2D2D2D</item>
  </style>
  <style name="splashscreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
  <color name="colorPrimary">#F8F8F8</color>
  <color name="colorPrimaryDark">#F8F8F8</color>
  <color name="colorControlHighlight">#E6E6E6</color>
  <color name="colorWhite">#FFFFFF</color>
  <color name="colorDark">#2D2D2D</color>
</resources>